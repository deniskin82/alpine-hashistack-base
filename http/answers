HOSTNAMEOPTS="-n alpine"
DEVDOPTS=udev
INTERFACESOPTS="auto lo
iface lo inet loopback

auto eth0
iface eth0 inet dhcp
    hostname alpine
"
DNSOPTS="-d local -n 8.8.8.8 8.8.4.4"
TIMEZONEOPTS="-z UTC"
PROXYOPTS="none"
APKREPOSOPTS="http://mirror.fcix.net/alpine/v3.17/main http://mirror.fcix.net/alpine/v3.17/community" # -c enables community repositories and -1 adds the first mirror
SSHDOPTS="-c openssh"
NTPOPTS="-c chrony"
DISKOPTS="-s 0 -m sys /dev/sda" # -L sets LVM and -e sets encryption
LBUOPTS=none
APKCACHEOPTS=none
USEROPTS=none
